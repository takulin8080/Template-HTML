<%#
=====================================================================================================
template/home
=====================================================================================================
%>
<%
	var ejspath = '../';
%>
<%#
-----------------------------------------------
html
-----------------------------------------------
%>
<%#
----------------------
before
----------------------
%>
<% if( modifier == 'before' ){ %>
	<!DOCTYPE html>
	<html lang="ja">
		<head>
			<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<title>
				<%- site.title %>
			</title>
			<meta name="description" content="<%- description %>">
			<% if( site.author ){ %>
				<meta name="author" content="<%- site.author %>"/>
			<% } %>
			<% if(dev){ %>
				<link rel="stylesheet" href="<%- path.css %>vendor.css">
				<link rel="stylesheet" href="<%- path.css %>foundation.css">
				<link rel="stylesheet" href="<%- path.css %>component.css">
				<link rel="stylesheet" href="<%- path.css %>project.css">
				<link rel="stylesheet" href="<%- path.css %>utility.css">
				<link rel="stylesheet" href="<%- path.css %>dev.css">
			<% } else { %>
				<link rel="stylesheet" href="<%- path.css %>app.css">
			<% } %>
		</head>
		<body data-modifier="<%- pageModifier %>">
			<%- include(ejspath + '_layout/header') %>
			<%- include(ejspath + '_module/global-nav') %>
			<!-- contents -->
			<div class="contents">
				<!-- main-contents -->
				<main class="main-contents">
				<% } %>
<%#
----------------------
after
----------------------
%>
				<% if( modifier == 'after' ){ %>
				</main>
				<!-- /main-contents -->
				<%- include(ejspath + '_layout/sub-contents') %>
			</div>
			<!-- /contents -->
			<%- include(ejspath + '_layout/footer') %>
			<!-- script -->
			<script src="<%- path.js %>app.js"></script>
			<!-- /script -->
			<%- include(ejspath + '_dev/app') %>
		</body>
	</html>
<% } %>
