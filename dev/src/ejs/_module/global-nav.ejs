<%# ---------------------------------------------------------------------------------------------- %>
<% var item = function(file){ %>
<li class="global-nav__item" data-modifier="<%- file %>">
	<a class="global-nav__link" href="<%- page[file].url %>">
		<%- page[file].title %></a>
</li>
<% } %>
<%# ---------------------------------------------------------------------------------------------- %>
<!-- global-nav -->
<nav class="global-nav">
	<ul class="global-nav__items">
		<%- item('index') %>
		<div class="global-nav__item" data-active-parent>
			<%- item('exsample') %>
			<%- item('article/index') %>
		</div>
	</ul>
</nav>
<div class="global-nav-trg" data-global-nav-trg data-menu-title="MENU">
	<span></span>
	<span></span>
	<span></span>
</div>
