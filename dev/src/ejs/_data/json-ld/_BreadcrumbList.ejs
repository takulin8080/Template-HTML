<%#
=====================================================================================================
_data/json-ld/BreadcrumbList
=====================================================================================================
%>
<%
var ejspath = '../../';
%>
<%# ---------------------------------------------------------------------------------------------- %>
{
	"@context": "http://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		<% var pos = 1 %>
		<% parent.forEach(function(key, index) { %>
			<% if (page[key]) { %>
				{
					"@type": "ListItem",
					"position": <%- pos %>,
					"item": {
						"@id": "<%- data.schema.WebSite.url %><%- page[key].absUrl %>",
						"name":
						<% if(!index) { %>
							"<%- data.schema.WebSite.name %>"
						<% } else { %>
							"<%- page[key].title %>"
						<% } %>
					}
				},
				<% pos++ %>
			<% } %>
		<% }) %>
		{
			"@type": "ListItem",
			"position": <%- pos++ %>,
			"item": {
				"@id": "<%- data.schema.WebSite.url %><%- absUrl %>",
				"name": "<%- title %>"
			}
		}
	]
}
