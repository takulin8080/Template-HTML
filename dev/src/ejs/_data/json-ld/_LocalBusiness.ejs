<%#
=====================================================================================================
_data/json-ld/_LocalBusiness
=====================================================================================================
%>
{
	"@context": "http://schema.org",
	"@type": "LocalBusiness",
	"name": "<%- data.localBusiness.name %>",
	"image": "<%- data.site.url %><%- data.localBusiness.logo %>",
	"url": "<%- data.localBusiness.url %>",
	"telephone": "<%- data.localBusiness.telephone %>",
	"priceRange":"<%- data.localBusiness.priceRange %>",
	"address": {
		"@type": "PostalAddress",
		"streetAddress": "<%- data.localBusiness.address.streetAddress %>",
		"addressLocality": "<%- data.localBusiness.address.addressLocality %>",
		"addressRegion":"<%- data.localBusiness.address.addressRegion %>",
		"postalCode": "<%- data.localBusiness.address.postalCode %>",
		"addressCountry": "<%- data.localBusiness.address.addressCountry %>"
	},
	"hasMap": "<%- data.localBusiness.hasMap %>",
	"openingHours": "<%- data.localBusiness.openingHours %>",
	"geo": {
		"@type": "GeoCoordinates",
		"latitude": "<%- data.localBusiness.geo.latitude %>",
		"longitude": "<%- data.localBusiness.geo.longitude %>"
	}
}
