<%#
=====================================================================================================
_data/_json-ld
=====================================================================================================
%>
<%
if (typeof Corporation === 'undefined') { var Corporation = true };
if (typeof LocalBusiness === 'undefined') { var LocalBusiness = '' };
if (typeof BreadcrumbList === 'undefined') { var BreadcrumbList = true };
if (typeof SiteNavigationElement === 'undefined') { var SiteNavigationElement = true };
%>
<%# ---------------------------------------------------------------------------------------------- %>
<!-- JSON-LD -->
<script type="application/ld+json">
	[
		<%# Page ---------------------------------------- %>
		<% if (pageModifier != 'index' && pageModifier != 'home') { %>
			<%- include(ejspath + '_data/json-ld/_Page') %>,
		<% } %>
		<%# Corporation ---------------------------------------- %>
		<% if (Corporation) { %>
			<%- include(ejspath + '_data/json-ld/_Corporation') %>,
		<% } %>
		<%# LocalBusiness ---------------------------------------- %>
		<% if (LocalBusiness) { %>
			<%- include(ejspath + '_data/json-ld/_LocalBusiness') %>
		<% } %>
		<%# BreadcrumbList ---------------------------------------- %>
		<% if (BreadcrumbList && pageModifier != 'index' && pageModifier != 'home') { %>
			<%- include(ejspath + '_data/json-ld/_BreadcrumbList') %>,
		<% } %>
		<%# SiteNavigationElement ---------------------------------------- %>
		<% if (SiteNavigationElement) { %>
			<%- include(ejspath + '_data/json-ld/_SiteNavigationElement') %>,
		<% } %>
		<%# WebSite ---------------------------------------- %>
		<%- include(ejspath + '_data/json-ld/_WebSite') %>
	]
</script>
<!-- /JSON-LD -->
