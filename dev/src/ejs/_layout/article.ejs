<%#
=====================================================================================================
layout/default
=====================================================================================================
%>
<%
var ejspath = '../';
%>
<%# ---------------------------------------------------------------------------------------------- %>
<%# before ======================================== %>
<% if( modifier == 'before' ){ %>
	<!DOCTYPE html>
	<html lang="ja">
		<%- include(ejspath + '_data/_head') %>
		<body data-modifier="<%- pageModifier %>">
			<%- include(ejspath + '_module/header') %>
			<%- include(ejspath + '_module/global-nav') %>
			<%- include(ejspath + '_module/breadcrumb') %>
			<!-- contents -->
			<div class="contents">
				<div class="contents__inner">
					<!-- main-contents -->
					<main class="main-contents">
						<div class="main-contents__inner">
<% } %>
<%# after ======================================== %>
<% if( modifier == 'after' ){ %>
						</div>
					</main>
					<!-- /main-contents -->
				</div>
			</div>
			<!-- /contents -->
			<%- include(ejspath + '_module/footer') %>
			<%- include(ejspath + '_data/_json-ld', {
				Organization:
					[
						'exsample'
					]
				,
				Person:
					[
						'exsample'
					]
				,
				Site:
					[
						'Article',
						'SiteNavigationElement',
						'WebSite'
					]
			}) %>
			<% if(dev){ %>
				<%- include(ejspath + '_module/dev-link') %>
			<% } %>
			<!-- script -->
			<script src="<%- path.js %>bundle.js"></script>
			<!-- /script -->
		</body>
	</html>
<% } %>
